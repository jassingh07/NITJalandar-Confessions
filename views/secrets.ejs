<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Don't keep your feelings inside, share them without being identified..</h1>
    <% userWithSecrets.forEach((user) =>{ %>
        <%user.secrets.forEach((secret) =>{ %>
          <p class="secret-text"><%=secret%></p>
        <%})%>
    <%})%>

    <hr>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/secrets/submit" role="button">Make another confession</a>
  </div>
</div>

<%- include('partials/footer') %>
